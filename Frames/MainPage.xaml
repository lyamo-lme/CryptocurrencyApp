<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
   
      xmlns:local="clr-namespace:TestTask.Frames"
      xmlns:localr="clr-namespace:TestTask.Converter"
      xmlns:TestTask="clr-namespace:TestTask" x:Class="TestTask.Frames.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Background="Yellow">
    <Page.Resources>
        <localr:CostConverter x:Key="CostConverter"></localr:CostConverter>
        <localr:ColorConverter x:Key="ColorConverter"></localr:ColorConverter>
    </Page.Resources>


    <Grid x:Name="MainGrid"   >
        <Frame  x:Name="MainFrame" Background="Red" NavigationUIVisibility="Hidden" Margin="0,21,0,0"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="752,30,0,0" VerticalAlignment="Top" Click="Button_Click" Height="34" Width="38"/>
    </Grid>
</Page>
